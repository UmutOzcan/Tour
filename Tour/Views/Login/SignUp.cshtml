@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Tour Misafir Kayıt Ekranı</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="/colorlib-regform-7/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/colorlib-regform-7/css/style.css">
</head>
<body>

    <div class="main" style="padding:25px 0;">

        <!-- Sign up form -->
        <section class="signup" style="margin-bottom: 0;">
            <div class="container">
                <div class="signup-content" style="padding: 25px 0;">
                    <div class="signup-form">
                        <h2 class="form-title">Hesap Olustur</h2>
                        <form method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" placeholder="Adınız" />
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account-o material-icons-name"></i></label>
                                <input type="text" placeholder="Soyadınız" />
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-phone material-icons-name"></i></label>
                                <input type="text" placeholder="Telefon Numaranız" />
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" placeholder="Mail Adresiniz" />
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" placeholder="Parolanız" />
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" name="re_pass" id="re_pass" placeholder="Parolanız Tekrar" />
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>Tüm  <a href="#" class="term-service">sartları</a> kabul ediyorum</label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" style="background-color: #FF1654" name="signup" id="signup" class="form-submit" value="Kayıt Ol" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image" style="margin-top: 75px;">
                        <figure><img src="/colorlib-regform-7/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="/Login/SignIn/" class="signup-image-link">Zaten bir hesabım var</a>
                    </div>
                </div>
            </div>
        </section>

    </div>

    <!-- JS -->
    <script src="/colorlib-regform-7/vendor/jquery/jquery.min.js"></script>
    <script src="/colorlib-regform-7/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
